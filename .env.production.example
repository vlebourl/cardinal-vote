# Cardinal Vote Production Environment Configuration
# Copy this file to .env and replace all placeholder values

# =============================================================================
# üîê SECURITY CRITICAL - REQUIRED ENVIRONMENT VARIABLES
# =============================================================================
# These MUST be set for production deployment - no defaults provided for security

# PostgreSQL Database Configuration
POSTGRES_DB=cardinal_vote
POSTGRES_USER=cardinal_user
POSTGRES_PASSWORD=                    # REQUIRED: Generate with: openssl rand -hex 32

# Super Admin Account (for platform management)
SUPER_ADMIN_EMAIL=                    # REQUIRED: admin@yourdomain.com
SUPER_ADMIN_PASSWORD=                 # REQUIRED: Generate with: openssl rand -hex 32

# JWT Security Configuration
JWT_SECRET_KEY=                       # REQUIRED: Generate with: openssl rand -hex 64
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Configuration
APP_NAME="Cardinal Vote"
APP_VERSION="2.0.0"
CARDINAL_ENV=production
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Configuration (set to your actual domain)
ALLOWED_ORIGINS=https://vote.yourdomain.com

# Rate Limiting
ENABLE_RATE_LIMITING=true
MAX_VOTES_PER_IP_PER_HOUR=5
SECURE_HEADERS=true

# Legacy Admin (backwards compatibility)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=                       # OPTIONAL: Generate with: openssl rand -hex 16
SESSION_SECRET_KEY=                   # OPTIONAL: Generate with: openssl rand -hex 32

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=.png,.jpg,.jpeg,.gif,.webp

# Voting Configuration
MIN_RATING=-2
MAX_RATING=2
MAX_VOTER_NAME_LENGTH=50
MAX_OPTION_TITLE_LENGTH=100
MAX_OPTION_CONTENT_LENGTH=500

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/app/logs
LOG_FILE=cardinal-vote.log
LOG_MAX_SIZE=50
LOG_BACKUP_COUNT=10

# =============================================================================
