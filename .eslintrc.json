{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "fetch": "readonly",
    "FormData": "readonly",
    "URLSearchParams": "readonly",
    "localStorage": "readonly",
    "prompt": "readonly",
    "alert": "readonly",
    "confirm": "readonly",
    "Intl": "readonly",
    "showLoading": "readonly",
    "hideLoading": "readonly",
    "showMessage": "readonly",
    "showConfirm": "readonly",
    "SuperAdminAPI": "readonly",
    "SuperAdminUtils": "readonly",
    "SuperAdminDashboard": "readonly",
    "ModerationDashboard": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error"
  }
}
